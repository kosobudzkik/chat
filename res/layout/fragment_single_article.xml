<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <pl.schibsted.chat.components.LatoTextView
                android:id="@+id/single_article_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/todo"
                style="@style/ChatTheme.Text.Big"
                android:visibility="gone"/>

        <ImageView
                android:id="@+id/single_article_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_photo"
                android:layout_below="@id/article_title_text_view"
                android:visibility="gone"/>

        <WebView
                android:id="@+id/single_article_web_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>